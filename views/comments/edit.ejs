<%- include ('../partials/header'); -%>

<div class="container"> 
        <h1 style="text-align: center;">Edit comments</h1>
        <div style="width:50%; margin:20px auto;">  
            <form action="/blogs/<%=campground_id%>/comments/<%=comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]", value="<%=comment.text%>"> 
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button> 
                </div>
            </form>
            <a href="/blogs">Go back</a>
        </div>

</div>
